/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.input-enter
  transition all 0.3s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.input-enter-active
    max-height 60px
    padding 2rem 0 !important
    background white
    transform translateX(0)

.input-leave
  transition all 0.3s
  transform translateX(0)
  &.input-leave-active
    max-height 0
    padding 0
    transform translateX(120%)